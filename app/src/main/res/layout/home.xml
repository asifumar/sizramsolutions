<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/vertical"
    android:background="?attr/colorBackgroundFloating"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageViewClients"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sizram"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButtonClients"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="143dp"
        android:background="@android:color/transparent"
        android:contentDescription="Clients"
        android:elevation="0dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/handshake" />

    <ImageButton
        android:id="@+id/imageButtonServices"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageButtonClients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/background_light"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/computer" />

    <ImageButton
        android:id="@+id/imageButtonCareer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/careergreen"
        android:layout_above="@+id/imageButtonServices"
        android:layout_toEndOf="@+id/imageButtonClients"
        android:layout_marginStart="48dp" />

    <ImageButton
        android:id="@+id/imageButtonAbout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/aboutus"
        android:layout_below="@+id/textView45"
        android:layout_alignEnd="@+id/imageButtonClients" />

    <ImageButton
        android:id="@+id/imageButtonContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mail"
        android:layout_alignTop="@+id/imageButtonAbout"
        android:layout_alignEnd="@+id/imageButtonCareer" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"></FrameLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButtonCareer"
        android:layout_below="@+id/imageButtonClients"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif"
        android:text="CAREER"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView46"
        android:layout_alignStart="@+id/imageButtonAbout"
        android:layout_below="@+id/imageButtonClients"
        android:layout_marginEnd="7dp"
        android:text="CLIENTS"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonServices"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="PRODUCTS AND SERVICES"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButtonAbout"
        android:layout_below="@+id/imageButtonAbout"
        android:text="ABOUT US"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButtonCareer"
        android:layout_below="@+id/imageButtonContact"
        android:layout_marginStart="19dp"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="15sp" />


</RelativeLayout>